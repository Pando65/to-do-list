<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>
<table class="table table-stripped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Due date</th>
      <th>Done</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.category_id %></td>
        <td><%= task.due_date %></td>
        <td><%= task.done %></td>
        <td><%= link_to 'Edit', edit_task_path(task, cat: params[:cat]) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-default"><%= link_to 'Back', categories_path(cat: params[:cat]) %></button>

<button type="button" class="btn btn-default"><%= link_to 'New Task', new_task_path(cat: params[:cat]) %></button>
