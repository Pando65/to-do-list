<p id="notice"><%= notice %></p>

<h1>Listing Categories</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.name, tasks_path(cat: category.id) %></td>
<!--         <td><%= link_to 'Show', category %></td> -->
        <td><%= link_to 'Edit', edit_category_path(category) %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <br>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-default" style="color:white"><%= link_to 'New Category', new_category_path %></button>

<button type="button" class="btn btn-default btn-danger" style="color:white"><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></device> 

